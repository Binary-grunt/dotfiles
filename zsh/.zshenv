# ─── Global Encoding ────────────────────────────────────────────────────────────
export LANG="en_US.UTF-8"
export EDITOR="nvim"
export TERM="xterm-256color"
# --- Load environment variable definitions ---

export DOTFILES="$HOME/dotfiles"
export ROOT_ENV="$DOTFILES/env-files/.config/env-files"
